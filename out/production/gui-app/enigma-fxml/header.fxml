<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HeaderController">
   <center>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label fx:id="loadStatusLabel" text="Please Load Enigma machine">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </Label>
            <Button fx:id="loadBtn" mnemonicParsing="false" onAction="#loadFile" text="Load" />
         </children>
      </HBox>
   </center>
   <right>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" BorderPane.alignment="CENTER">
         <children>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#changeThemeAction" AnchorPane.bottomAnchor="17.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/paintbrush.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
   </right>
   <top>
      <Label alignment="CENTER" prefHeight="40.0" prefWidth="454.0" text="Enigma App by Omer Gabay and Bar Norani" textFill="#4728c5" BorderPane.alignment="CENTER">
         <font>
            <Font name="Cambria" size="18.0" />
         </font>
         <padding>
            <Insets top="10.0" />
         </padding>
      </Label>
   </top>
   <left>
      <Region prefHeight="60.0" prefWidth="106.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
