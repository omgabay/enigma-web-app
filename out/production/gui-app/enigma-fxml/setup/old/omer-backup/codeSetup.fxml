<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="305.0" prefWidth="448.0">
         <children>
            <HBox prefHeight="80.0" prefWidth="408.0" spacing="10.0">
               <children>
                  <Label minWidth="-Infinity" text="Choose Rotors:" />
                  <HBox fx:id="idsCbox" spacing="5.0" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="87.0" prefWidth="408.0" spacing="10.0">
               <children>
                  <Label minWidth="-Infinity" text="Choose Rotor Positions:" />
                  <HBox fx:id="positionsCbox" alignment="CENTER_LEFT" spacing="5.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="408.0" spacing="8.0">
               <children>
                  <Label minWidth="-Infinity" text="Choose Reflector:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <RadioButton fx:id="ref1" mnemonicParsing="false" selected="true" text="I">
                     <font>
                        <Font name="Bell MT" size="12.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="reflectorSelection" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="ref2" mnemonicParsing="false" text="II" toggleGroup="$reflectorSelection">
                     <font>
                        <Font name="Bell MT" size="12.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="ref3" mnemonicParsing="false" text="III" toggleGroup="$reflectorSelection">
                     <font>
                        <Font name="Bell MT" size="12.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="ref4" mnemonicParsing="false" text="IV" toggleGroup="$reflectorSelection">
                     <font>
                        <Font name="Bell MT" size="12.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="ref5" mnemonicParsing="false" text="V" toggleGroup="$reflectorSelection">
                     <font>
                        <Font name="Bell MT" size="12.0" />
                     </font>
                  </RadioButton>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addPlugsClicked" text="Add Plugs To Plugboard">
               <VBox.margin>
                  <Insets bottom="20.0" top="5.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="randomSetupBtn" mnemonicParsing="false" text="Set Random Code" />
                  <Button fx:id="machineSetupBtn" mnemonicParsing="false" text="Create Machine" />
               </children>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
